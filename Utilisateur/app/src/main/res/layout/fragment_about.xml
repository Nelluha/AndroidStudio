<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".aboutFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="@dimen/default_margin_detail"
            android:src="@drawable/gaara"
            android:scaleType="centerCrop"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/toolbar"
            android:layout_marginLeft="@dimen/default_margin_detail"/>

        <TextView
            android:id="@+id/nom_page_detail"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Topio"
            android:textColor="@color/lavender"
            android:gravity="center"
            android:theme="@style/Default_text_style"
            android:layout_alignParentRight="true"
            android:layout_below="@id/toolbar"
            android:layout_marginTop="80dp"/>

        <TextView
            android:id="@+id/texteSynopsis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin_detail"
            android:layout_marginTop="@dimen/default_margin_detail"
            android:text="Une bibliothèque numérique."
            android:layout_alignParentLeft="true"
            android:layout_below="@id/imageView"
            android:layout_marginLeft="@dimen/default_margin_detail"
            />

        <TextView
            android:id="@+id/texteResume"
            android:layout_width="370dp"
            android:layout_height="280dp"
            android:text="Cette application permet aux utilisateurs de recreer leurs collection en ligne.
Derriere ce projet, c'est deux étudiante en informatique passionnée de manga sous forme d'anime mais aussi de scan.
Cette applicaion regroupe un large pannel de manga sous 2 formes distinct. Lecture et passionné de serie se reunissent sous cette meme application."
            android:layout_marginTop="@dimen/default_margin"
            android:textSize="10sp"
            android:textColor="@color/black"
            android:theme="@style/Default_text_style"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/texteSynopsis"
            android:layout_marginLeft="@dimen/default_margin_detail" />


    </LinearLayout>

</RelativeLayout>